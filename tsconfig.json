{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6",
      "DOM"
    ],
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "strictBindCallApply": true,
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*",
    "node_modules/melvor-types",
  ]
}
